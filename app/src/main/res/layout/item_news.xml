<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_newsImageCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="16dp"
        android:background="@android:color/transparent"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        >
        <ImageView
            android:id="@+id/imageView_newsImage"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/ic_image_default_grey"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textView_newsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/news_title_example"
        style="@style/TextBlackStyle"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/cardView_newsImageCard"
        app:layout_constraintStart_toEndOf="@id/cardView_newsImageCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="textStart"
        />
    <TextView
        android:id="@+id/textView_newsPublishedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextGreyStyle"
        app:layout_constraintBottom_toBottomOf="@id/cardView_newsImageCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>